<div class="jumbotron text-center">
    <h1 class="display-3">Welcome to my blog</h1>
</div>

<div class="row">
    <% @posts.each do |post| %>
        <div class="col-4">
           <h2><%= post.title%></h2>
           <p><%= truncate(post.content,length: 150) %></p>
           <%= link_to 'More', post_path(post) %>
        </div>  
    <% end %>
</div>